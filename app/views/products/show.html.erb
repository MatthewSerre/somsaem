<div class="container">
<div class="row">
    <div class="col-md-6 product_img">
        <% if @product.productimage.attached? %>
        <img src="<%=(url_for(@product.productimage))%>" class="img-fluid">
        <% else %>
        <img src="https://upload.wikimedia.org/wikipedia/commons/3/3b/Picture_Not_Yet_Available.png" class="img-fluid">
        <% end %>
    </div>
    <div class="col-md-6 product_content">
        <h4><%= @product.name %></h4>
        <p><%= @product.description %></p>
        <h3 class="cost"><span class="glyphicon glyphicon-usd"><%= @product.price %></span><small class="pre-cost"><span class="glyphicon glyphicon-usd"></span> 60.00</small></h3>
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <select class="form-control" name="select">
                    <option value="" selected="">Color</option>
                    <option value="black">Black</option>
                    <option value="white">White</option>
                    <option value="gold">Gold</option>
                    <option value="rose gold">Rose Gold</option>
                </select>
            </div>
            <!-- end col -->
            <div class="col-md-4 col-sm-6 col-xs-12">
                <select class="form-control" name="select">
                    <option value="">Capacity</option>
                    <option value="">16GB</option>
                    <option value="">32GB</option>
                    <option value="">64GB</option>
                    <option value="">128GB</option>
                </select>
            </div>
            <!-- end col -->
            <div class="col-md-4 col-sm-12">
                <select class="form-control" name="select">
                    <option value="" selected="">QTY</option>
                    <option value="">1</option>
                    <option value="">2</option>
                    <option value="">3</option>
                </select>
            </div>
            <!-- end col -->
        </div>
        <div class="space-ten"></div>
        <br />
        <div class="btn-ground">
            <%= button_to 'Add to cart', line_items_path(product_id: @product.id), class: 'btn btn-primary' %>
        </div>
    </div>
</div>
</div>

<% if is_admin? %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end %>