<%= form_with(model: product, local: true, class: "form_auth") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
  <%= label_tag(:name, "Name") %>
  <%= form.text_field :name, class: "form-control", placeholder: "Name" %><br />
  <%= label_tag(:description, "Description") %>
  <%= form.text_area :description, class: "form-control", placeholder: "Description" %><br />
  <%= label_tag(:manufacturer, "Manufacturer") %>
  <%= form.text_field :manufacturer, class: "form-control", placeholder: "Manufacturer" %><br />
  <%= label_tag(:model, "Model") %>
  <%= form.text_field :model, class: "form-control", placeholder: "Model" %><br />
  </div>
  <div class="w-100"></div>
  <div class="col">
  <%= label_tag(:quantity, "Quantity Available") %>
  <%= form.text_field :quantity, class: "form-control", placeholder: "Quantity Available" %><br />
  <%= label_tag(:price, "Price") %>
  <%= form.text_field :price, class: "form-control", placeholder: "Price" %><br />
  <%= label_tag(:basePrice, "Base Buy Price") %>
  <%= form.text_field :basePrice, class: "form-control", placeholder: "Base Buy Price" %><br />
  <%= label_tag(:productimage, "Product Image") %>
  <%= form.file_field :productimage, class: "form-control" %><br />
  <%= label_tag(:isRepairable, "Is Repairable") %>
  <%= form.check_box :isRepairable, class: "form-control" %><br />

  <div>
  <h3>Repair</h3>
  <%= form.fields_for :repairables do |repairable_attributes|%>
      <%= repairable_attributes.label :price, "Price:" %>
      <%= repairable_attributes.text_field :price %>
  <% end %>
</div>
  
  </div>
  </div>


    <%= form.submit class: "btn btn-primary" %>
<% end %>