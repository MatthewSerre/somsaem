<div id="react-container">
<%= javascript_pack_tag 'SellDeviceForm' %>
</div>

<% if false%>
<div class="row">
  <div class="col-md-4 order-md-2 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
      <span class="text-muted">Step</span>
      <span class="badge badge-secondary badge-pill">1</span>
    </h4>
    <ul class="list-group mb-3">
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">Estimate Price</h6>
          <small class="text-muted">Provide device information</small>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">Second product</h6>
          <small class="text-muted">Brief description</small>
        </div>
        <span class="text-muted">$8</span>
      </li>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">Third item</h6>
          <small class="text-muted">Brief description</small>
        </div>
        <span class="text-muted">$5</span>
      </li>
      <li class="list-group-item d-flex justify-content-between bg-light">
        <div class="text-success">
          <h6 class="my-0">Promo code</h6>
          <small>EXAMPLECODE</small>
        </div>
        <span class="text-success">-$5</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <span>Total (USD)</span>
        <strong>$20</strong>
      </li>
    </ul>
  </div>
  <div class="col-md-8 order-md-1">
    <h4 class="mb-3">Estimate Price</h4>
    <form class="needs-validation" novalidate="">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="model">Model</label>
          <input type="text" class="form-control" id="model" placeholder="iPhone 7" value="" required="">
          <div class="invalid-feedback">
            Valid model is required.
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <label for="manufacturer">Manufacturer</label>
          <input type="text" class="form-control" id="manufacturer" placeholder="Apple" value="" required="">
          <div class="invalid-feedback">
            Valid Manufacturer is required.
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="color">Color</label>
          <select class="custom-select d-block w-100" id="color" required="">
            <option value="">Choose...</option>
            <option>Black</option>
            <option>White</option>
            <option>Red</option>
          </select>
          <div class="invalid-feedback">
            Please select a valid color.
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <label for="internal-torage">Internal Storage</label>
          <select class="custom-select d-block w-100" id="state" required="">
            <option value="">Choose...</option>
            <option>8 GB</option>
            <option>16 GB</option>
            <option>32 GB</option>
            <option>64 GB</option>
          </select>
          <div class="invalid-feedback">
            Please provide a valid internal storage.
          </div>
        </div>
      </div>
      <hr class="mb-4">
      <div class="row">
        <div class="col-md-6 mb-3">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="operator-locked">
            <label class="custom-control-label" for="operator-locked">Operator Locked</label>
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="icloud-locked">
            <label class="custom-control-label" for="icloud-locked"">iCloud Locked</label>
          </div>
        </div>
      </div>
      <hr class="mb-4">
      <button class="btn btn-primary btn-lg btn-block" type="submit">Estimate</button>
    </form>
  </div>
</div>

<% end %>