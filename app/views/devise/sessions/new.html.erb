<secton class="form_auth">
  <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
  <%= form_for(resource, as: resource_name, url: ccount_session_path(resource_name)) do |f| %>  
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, required: false, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email adress", autocomplete: "current-email"  %>
  
  <label for="inputPassword" class="sr-only">Password</label>
  <%= f.password_field :password, required: false, class: "form-control", id: "inputPassword", placeholder: "Password" %>
  
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <p class="mt-5 mb-3 text-muted">Â© 2017-2020</p>
<% end %>
<%= render "devise/shared/links" %>
</secton>

